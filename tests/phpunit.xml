<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals="false"
        colors="true"
        bootstrap="autoload.php"
        failOnRisky="true"
        failOnWarning="true">
    <testsuites>
        <testsuite name="Package Test Suite">
            <directory suffix=".php">./src/</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="JohnKary\PHPUnit\Listener\SpeedTrapListener"/>
    </listeners>
</phpunit>
